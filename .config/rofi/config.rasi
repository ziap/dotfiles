configuration {
  modi: "drun,filebrowser,run";
  
  me-accept-entry: "MousePrimary";
  me-select-entry: "";
  show-icons: true;
  
  drun-display-format: " {name} ";
  run-shell-command: "wezterm start {cmd}";
  sidebar-mode: true;
  matching: "fuzzy";
  scroll-method: 0;
  disable-history: false;

  display-drun: "異 Apps";
  display-run: " Run";
  display-filebrowser: " Files";

  combi-modi: "drun,run";
  sort: true;
  sorting-method: "normal";

  timeout {
    action: "kb-cancel";
    delay: 30;
  }

  filebrowser {
    directories-first: true;
    sorting-method: "name";
  }
}

@theme "gruvbox.rasi"
